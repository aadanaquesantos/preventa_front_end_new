<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorError">@color/error_stroke_color</item>
    </style>
    <style name="styleBottomNavigationView" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>
    <style name="EditTextStylBgWhite">
        <item name="android:paddingStart">@dimen/_16sdp</item>
        <item name="android:paddingEnd">@dimen/_16sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:background">@drawable/bg_ractangle_rounded</item>
        <item name="android:gravity">center_vertical|start</item>
    </style>
    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_normal</item>
        <item name="android:paddingTop">@dimen/spacing_standard</item>
        <item name="android:paddingBottom">@dimen/spacing_standard</item>
        <item name="android:paddingStart">@dimen/spacing_standard</item>
        <item name="android:paddingEnd">@dimen/spacing_standard</item>
        <item name="android:theme">@style/Theme.MaterialComponents.Light</item>
        <item name="cornerRadius">@dimen/spacing_xlarge</item>
        <item name="fontPath">fonts/Minimo-Bold.otf</item>
    </style>
    <style name="tvTitle">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/colorPrimary</item>

    </style>

    <style name="tvLabel">
        <item name="android:textSize">12dp</item>
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>


    <style name="tvValueLabel">
        <item name="android:textSize">12dp</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textColor">#66667E</item>
    </style>

    <style name="MaterialButtonStyle.Filled">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/commonColorWhite</item>
        <item name="rippleColor">@color/commonColorWhite</item>
    </style>

    <style name="MaterialButtonStyle.Icon">
        <item name="backgroundTint">@color/white</item>
        <item name="android:textColor">@color/commonColorWhite</item>
        <item name="rippleColor">@color/tab_home_active</item>
    </style>

    <style name="MaterialButtonStyle.Drawable">
        <item name="iconSize">10dp</item>
        <item name="fontFamily">@font/poppins_light</item>
        <item name="android:textSize">12dp</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="iconTint">@color/commonColorWhite</item>
        <item name="android:textColor">@color/commonColorWhite</item>
        <item name="rippleColor">@color/tab_home_active</item>
    </style>
    <style name="MaterialButtonStyle.Trans">
        <item name="background">@color/transparent</item>
        <item name="strokeColor">@color/white</item>
        <item name="iconTint">@color/colorPrimary</item>
        <item name="android:textColor">@color/commonColorWhite</item>
        <item name="rippleColor">@color/tab_home_active</item>
    </style>

<!--    <style name="MaterialButtonStyle.OnlyIcon">-->
<!--        <item name="background">?attr/selectableItemBackgroundBorderless</item>-->
<!--        <item name="strokeColor">@color/white</item>-->
<!--        <item name="rippleColor">@color/tab_home_active</item>-->
<!--    </style>-->


    <style name="colorFontTab" parent="AppTheme">
        <item name="colorPrimary">@color/tab_home_active</item>
    </style>
    <style name="CustomTabBottomSheet" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
    </style>
    <style name="styleSubTitleHome">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">#153E73</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="styleViewAllHome">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">#CFCFCF</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="titleMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">#515F65</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="customtheme" >

        <item name="android:textAppearance">@style/tvTitle</item>
        <item name="android:background">@drawable/bg_ractangle_rounded</item>
    </style>
<!--desde acÃ¡ reutiliz-->
    <style name="normalLabel">
        <item name="fontPath">font/poppins_light.ttf</item>
        <item name="android:textSize">@dimen/_5sdp</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>
    <style name="normalLabelBold">
        <item name="fontPath">font/poppins_bold.ttf</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>

    <style name="mediumLabel">
        <item name="fontPath">font/poppins_medium.ttf</item>
        <item name="android:textSize">@dimen/_5sdp</item>
        <item name="android:tint">@color/colorPrimary</item>
    </style>
    <!--style for ripple library-->
    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989A</item>
    </style>

    <style name="RippleStyleDark" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#80000000</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Toolbar.Light" parent="@style/AppTheme">
        <item name="colorControlNormal">@color/grey_60</item>
        <item name="android:textColorPrimary">@color/grey_60</item>
    </style>
    <style name="sizeIconToolbar">
        <item name="android:layout_width">@dimen/_24sdp</item>
        <item name="android:layout_height">@dimen/_24sdp</item>
    </style>

    <!-- Change Overflow Menu ListView Divider Property -->
    <style name="PopupMenuListView" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:divider">#FF0000</item>
        <item name="android:dividerHeight">2dp</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="AppTheme2" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/yellow</item>
        <item name="colorAccent">@color/yellow</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialogText</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="colorPrimaryDark">@color/yellow</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Neutral</item>
    </style>


    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/colorPrimaryDark</item>
<!--        <item name="android:background">@color/colorPrimary</item>-->
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Alert.Button.Neutral" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

<!--    <style name="Theme.MyApp.Dialog.Alert" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">-->
<!--        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialogText</item>-->
<!--    </style>-->
    <style name="MaterialAlertDialogText" parent="@style/MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/google_red</item>
    </style>

</resources>